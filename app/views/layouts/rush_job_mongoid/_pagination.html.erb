<% if pages_count > 1 %>
  <nav aria-label="page navigation">
    <ul class="pagination">
      <li class="page-item">
        <% if page > 1 %>
          <%= link_to 'Previous', rush_jobs_path({ page: page - 1 }), class: 'page-link' %>
        <% else %>
          <%= link_to 'Previous', rush_jobs_path({ page: page }), class: 'page-link disabled' %>
        <% end %>
      </li>

      <% if pages_count < 5 %>
        <% (1..pages_count).each do |page_n| %>
          <li class="page-item">
            <%= link_to page_n, rush_jobs_path({ page: page_n }), class: "page-link #{'active' if page == page_n}" %>
          </li>
        <% end %>
      <% else %>
        <% if page < 3 || page >= pages_count - 1 %>
          <li class="page-item">
            <%= link_to 1, rush_jobs_path({ page: 1 }), class: "page-link #{'active' if page == 1}" %>
          </li>
          <li class="page-item">
            <%= link_to 2, rush_jobs_path({ page: 2 }), class: "page-link #{'active' if page == 2}" %>
          </li>
        <% else %>
          <li class="page-item">
            <%= link_to page - 1, rush_jobs_path({ page: page - 1 }), class: 'page-link' %>
          </li>
          <li class="page-item">
            <%= link_to page, rush_jobs_path({ page: page }), class: "page-link active" %>
          </li>
        <% end %>
        <li class="page-item">
          <%= link_to '...', '#', class: 'page-link' %>
        </li>
        <li class="page-item">
          <%= link_to pages_count - 1, rush_jobs_path({ page: pages_count - 1 }), class: "page-link #{'active' if page == pages_count - 1}" %>
        </li>
        <li class="page-item">
          <%= link_to pages_count, rush_jobs_path({ page: pages_count }), class: "page-link #{'active' if page == pages_count}" %>
        </li>
      <% end %>

      <li class="page-item">
        <% if page < pages_count %>
          <%= link_to 'Next', rush_jobs_path({ page: page + 1 }), class: 'page-link' %>
        <% else %>
          <%= link_to 'Next', rush_jobs_path({ page: page }), class: 'page-link disabled' %>
        <% end %>
      </li>
    </ul>
  </nav>
<% end %>
